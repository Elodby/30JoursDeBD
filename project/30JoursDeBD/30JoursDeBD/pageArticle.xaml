    <Page.Resources>

        <!-- Collection -->
        <CollectionViewSource
            x:Name="SourceListView"
            Source="{Binding LesImages}" />
        <CollectionViewSource
            x:Name="SourceListViewComments"
            Source="{Binding LesCommentaires}" />
                                

        <!-- Data Template : pour la GridView du Corps -->
        <DataTemplate x:Key="PlanchesTemplate">
            <Image Source="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="CommentsTemplate">
            <TextBlock Text="{Binding Nom}" Foreground="Black"/>
        </DataTemplate>

    </Page.Resources>

