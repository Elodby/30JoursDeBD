                                ItemTemplate="{StaticResource PlanchesTemplate}"
                                SelectionMode="None"
                                IsSwipeEnabled="false" IsItemClickEnabled="False">
                    </GridView>
                </Grid>
            </Grid>
            <Border x:Name="BR_DEF_Header" BorderBrush="#FFCECDCE" BorderThickness="0,0,0,2">
