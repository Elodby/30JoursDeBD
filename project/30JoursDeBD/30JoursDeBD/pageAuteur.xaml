                        <Image Source="Assets/GR_AuteurVide.png" Name="GR_ImageAuteur" Margin="30 30 10 10" Width="200" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="50*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="À propos de l'auteur... " Foreground="#FFB80170" FontSize="24" Margin="30,20,5,0" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                                <TextBlock x:Name="GR_Auteur" Foreground="Black" FontWeight="Bold" FontSize="24" Margin="0,20,5,0" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="1">
                            <ScrollViewer >
                                <TextBlock x:Name="GR_AuteurDescription" Foreground="Black" FontSize="16" Margin="30, 10, 50, 20" TextWrapping="WrapWholeWords"/>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Grid>

                <Grid x:Name="GR_Corps_Planche" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="60*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Ses planches: " FontSize="24" Foreground="Black" Margin="30 20 0 10" FontWeight="Bold" VerticalAlignment="Bottom"/>
                    <GridView
                                    Grid.Row="1"
                                    Margin="50 10 10 10"
                                    Padding="2,2,2,2"
                                    x:Name="GR_listePlanches"
                                    AutomationProperties.AutomationId="ItemsListView"
                                    AutomationProperties.Name="Items"
                                    ItemsSource="{Binding Source={StaticResource SourceListView}}"
                                    ItemTemplate="{StaticResource PlanchesTemplate}"
                                    SelectionMode="None"
                                    IsSwipeEnabled="false" IsItemClickEnabled="False">
                    </GridView>
                </Grid>
                <Grid x:Name="GR_Corps_Strip" Grid.Column="2">
